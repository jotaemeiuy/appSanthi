<!-- views/edit.pug -->
doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Editar Entrada
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    .container.mt-5
      h1 Editar Entrada
      form(action=`/edit/${entry.id}`, method="POST")
        div.form-group
          label(for="date") Fecha
          input#date.form-control(type="date", name="date", value=entry.date, required)
        div.form-group
          label(for="description") Descripci√≥n
          textarea#description.form-control(name="description", rows="4", required)= entry.description
        button.btn.btn-primary(type="submit") Actualizar
